@{
    ViewBag.Title = "Home Page";
}
@section scripts {
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/controller/homeController.js"></script>
}
<div class="row" style="margin-top:10px;">
    <div class="col-md-12">
        <button class="btn btn-default" id="btnAddNew"> Thêm bản ghi</button>
    </div>
</div>
<div class="row" style="margin-top:10px;">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>FullName</th>
                    <th>Sqlary</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="tblData">
            </tbody>
        </table>
        <div class="pagination" id="pagination">

        </div>
    </div>
</div>
<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{ID}}</td>
        <td>{{FullName}}</td>
        <td><input type="number" data-id="{{ID}}" value="{{Salary}}" class="txtSalary" /></td>
        <td>{{{Status}}}</td>
    </tr>
</script>

<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add and Update</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="txtName">Name</label>
                        <input type="text" class="form-control" id="txtName" >
                        <input type="hidden" id="hideID" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="txtSalary">Salary</label>
                        <input type="number" class="form-control" id="txtSalary">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="chkStatus"> Status 
                        </label>
                    </div>
                    <button type="submit" class="btn btn-default">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>